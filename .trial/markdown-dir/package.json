{
  "name": "markdown-dir",
  "displayName": "markdown-dir",
  "description": "Markdown directory navigation header generator",
  "version": "0.1.0",
  "publisher": "russoturisto",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/russoturisto/markdown-dir"
  },
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.createMarkdownDir",
    "onCommand:extension.updateMarkdownDir",
    "onCommand:extension.deleteMarkdownDir",
    "onLanguage:markdown"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.createMarkdownDir",
        "title": "Markdown Dir: Create"
      },
      {
        "command": "extension.updateMarkdownDir",
        "title": "Markdown Dir: Update"
      },
      {
        "command": "extension.deleteMarkdownDir",
        "title": "Markdown Dir: Delete"
      },
      {
        "command": "extension.updateAllMarkdownDir",
        "title": "Markdown Dir: Update All"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Markdown DIR configuration",
      "properties": {
        "markdown-dir.defaultFileNames": {
          "type": "array",
          "default": [
            "README.md"
          ],
          "description": "Names of the default files that acts as directory listings."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.1",
    "vscode": "^1.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "__metadata": {
    "id": "3fab7d9b-4b80-4ef0-93ef-45b101edc247",
    "publisherId": "eeb5a177-6ea2-47b1-aca9-35fe5c3dc579",
    "publisherDisplayName": "russoturisto"
  }
}